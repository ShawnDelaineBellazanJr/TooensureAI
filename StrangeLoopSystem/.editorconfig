root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[*.{cs,csx}]
indent_style = space
indent_size = 4

# Suppress some less critical CA warnings temporarily to focus on build completion
dotnet_diagnostic.CA1848.severity = suggestion  # LoggerMessage delegates
dotnet_diagnostic.CA2007.severity = suggestion  # ConfigureAwait
dotnet_diagnostic.CA1822.severity = suggestion  # Mark members as static
dotnet_diagnostic.CA1305.severity = suggestion  # Culture-specific formatting
dotnet_diagnostic.CA1031.severity = suggestion  # Catch specific exceptions
dotnet_diagnostic.CA1805.severity = suggestion  # Explicit default initialization
dotnet_diagnostic.CA1854.severity = suggestion  # TryGetValue optimization
dotnet_diagnostic.CA1024.severity = suggestion  # Use properties where appropriate
dotnet_diagnostic.CA5394.severity = suggestion  # Cryptographically secure random
dotnet_diagnostic.CA1852.severity = suggestion  # Seal types
dotnet_diagnostic.CA1724.severity = suggestion  # Type name conflicts
dotnet_diagnostic.CA1062.severity = suggestion  # Validate parameters
dotnet_diagnostic.CA1515.severity = suggestion  # Make types internal

# Keep critical warnings as errors
dotnet_diagnostic.CA2227.severity = error       # Read-only collections
dotnet_diagnostic.CA1002.severity = error       # Use proper collection types
dotnet_diagnostic.CA1001.severity = error       # Implement IDisposable
